// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  email        String    @unique
  password     String
  admin        Boolean?  @default(false)
  createdAt    DateTime? @default(now())
  readBlueCard String[]
  subscribe    String[]
}

model BlueCard {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  thumbnail   String
  summary     String
  description String
  bluetags    String[]
  sns         String
  createdAt   DateTime  @default(now())
  deadline    DateTime?
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId   String    @db.ObjectId
}

model Project {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  key       String     @unique
  chain     String
  title     String
  BlueCards BlueCard[]
}
